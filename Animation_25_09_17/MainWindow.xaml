<Window x:Class="Animation_25_09_17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Animation_25_09_17"
        mc:Ignorable="d"
        Title="MainWindow"  FontSize="16" SizeToContent="WidthAndHeight">
    <DockPanel>
        <StackPanel  Width="150" Background="#FFE6D7D7" DockPanel.Dock="Right">
            <Button x:Name="butAnzeigen" Content="Anzeigen" />
            <Button x:Name="butNachRechts" Content="Nach Rechts" />
            <Button x:Name="butNachLinks" Content="Nach Links" />
            <Button x:Name="butNachOben" Content="Nach Oben" />
            <Button x:Name="butNachUnten" Content="Nach Unten" />
            <Label>Vorhandene Kreise</Label>
            <ListBox x:Name="lbxKreise" MinHeight="30" SelectionMode="Multiple" />
        </StackPanel>
        <Canvas Name="leinwand"   Background="#FFF0ECA2" MouseDown="leinwand_MouseDown" ClipToBounds="True" Width="460" Height="460" />
    </DockPanel>
</Window>